{% set navigation_bar = [['index', 'Home'], ['about', 'About'], ['contact', 'Contact']] %}
{% set active_page = active_page|default('index') %}

<!DOCTYPE HTML>
<html>
	<head>
		<title>{{title}}</title>
	</head>
	<body>

		{% block navigation %}
			<ul id="navigation">
				{% for item in navigation_bar %}
					<li{% if item[0] == active_page %} class="active"{% endif%}>
						<a href="{{ app.url_generator.generate(item[0]) }}">{{item[1]}}</a>
					</li>
				{% endfor %}
			</ul>
		{% endblock %}

		<h1>{{head}}</h1>
		{% block content %}{% endblock %}
	</body>
</html>